<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/id_tv_text" />

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/id_tv"
        android:contentDescription="@string/icon_descr"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_circle_24px_brred" />

    <TextView
        android:id="@+id/sat_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/icon_iv"
        android:text="@string/satellite_type_text" />

    <TextView
        android:id="@+id/azimut_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@id/elevation_tv"
        android:text="@string/azimut_text"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/elevation_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@id/signal_strength_tv"
        android:text="@string/elevation_text"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/signal_strength_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="@string/signal_strength_text"
        android:textAlignment="center" />
</RelativeLayout>